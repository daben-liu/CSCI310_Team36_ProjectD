<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Notes"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/filter_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Tags (comma-separated)..." />

    <CheckBox
        android:id="@+id/filter_has_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android.layout.marginTop="16dp"
        android:text="Has Photo" />

    <CheckBox
        android:id="@+id/filter_has_voice_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Voice Memo" />

    <CheckBox
        android:id="@+id/filter_has_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Location" />

</LinearLayout>